#include <iostream>
using namespace std;

int main()
{
    int numero1,numero2,numero3;
    float promedio;
    cout<<"ingresar el primer numero: ";
    cin >>numero1;
    if ((numero1>=0)&&(numero1<=10))
    {
        cout<<"ingresar el segundo numero: ";
        cin>>numero2;
        if((numero2>=0)&&(numero2<=10))
        {
            cout<<"ingresar el stercer numero: ";
            cin>>numero3;
            if((numero3>=0)&&(numero3<=10))
             {
                 promedio=(numero1+numero2+numero3)/3.0;
                 cout<<"el promediop ser de: "<<promedio;
             }    
             else
             cout<<"error , tercer numero no valido";
        }
        else 
        cout<<"error , segundo numero no valido";
    }
    else
    cout<<"error , primer numero no valido";

    return 0;
}
