#include <iostream>
#include <math.h>
using namespace std; 

int main(){
	double r , c , mati ; 
	do {
		cout << "ingrese el radio de la circunferencia: ";
		cin >> r;
	} while (r == 0 || r < 0);
	//area de la circunferencia 
	c = (r*r * 3.14);
	mati = (2 * 3.14 * r);

	cout << "el perimetro es: " << mati << endl; 
	cout << "el area es: " << c << endl;

	return 0;

}
